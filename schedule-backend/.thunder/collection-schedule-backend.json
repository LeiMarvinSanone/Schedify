{
  "collectionName": "schedule-backend",
  "version": "1.0",
  "requests": [
    {
      "name": "Root - Health",
      "folder": "General",
      "method": "GET",
      "url": "{{base_url}}/",
      "headers": [],
      "body": null,
      "tests": [
        "status == 200",
        "bodyContains('Backend is working')"
      ]
    },
    {
      "name": "Create Student",
      "folder": "Students",
      "method": "POST",
      "url": "{{base_url}}/students",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ],
      "body": {
        "name": "Alice Example",
        "email": "alice@example.com",
        "phone": "+1112223333"
      },
      "tests": ["status == 201", "json.id"]
    },
    {
      "name": "Get Student by ID",
      "folder": "Students",
      "method": "GET",
      "url": "{{base_url}}/students/1",
      "headers": [],
      "body": null,
      "tests": ["status == 200", "json.id == 1"]
    },
    {
      "name": "Create Class",
      "folder": "Classes",
      "method": "POST",
      "url": "{{base_url}}/classes",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ],
      "body": {
        "studentId": 1,
        "subject": "Mathematics",
        "time": "10:30",
        "room": "A204",
        "building": "Building A",
        "day": "Monday"
      },
      "tests": ["status == 201", "json.studentId == 1"]
    },
    {
      "name": "Get Class by ID",
      "folder": "Classes",
      "method": "GET",
      "url": "{{base_url}}/classes/1",
      "headers": [],
      "body": null,
      "tests": ["status == 200", "json.id == 1"]
    },
    {
      "name": "Update Class",
      "folder": "Classes",
      "method": "PUT",
      "url": "{{base_url}}/classes/1",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ],
      "body": {
        "time": "11:00",
        "room": "A210"
      },
      "tests": ["status == 200", "json.time == '11:00'"]
    },
    {
      "name": "Delete Class",
      "folder": "Classes",
      "method": "DELETE",
      "url": "{{base_url}}/classes/1",
      "headers": [],
      "body": null,
      "tests": ["status == 200", "json.message"]
    },
    {
      "name": "Get All Classes",
      "folder": "Classes",
      "method": "GET",
      "url": "{{base_url}}/classes",
      "headers": [],
      "body": null,
      "tests": ["status == 200", "json.length >= 0"]
    },
    {
      "name": "Get Student's Classes",
      "folder": "Classes",
      "method": "GET",
      "url": "{{base_url}}/student/1/classes",
      "headers": [],
      "body": null,
      "tests": ["status == 200"]
    }
  ]
}
